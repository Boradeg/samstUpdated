<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/dLayout3"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".SacWorld.SacWorldActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/image_sak_world"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="20dp"
                android:padding="10dp"
                android:src="@drawable/profile" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginHorizontal="16dp"
               >

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/LoginTextInputOuterFieldStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    app:boxStrokeColor="@color/black"
                    app:hintTextColor="@color/purple_500"
                    >

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/firstNameFamilyHead2"
                        style="@style/LoginTextInputInnerFieldStyle"
                        android:layout_width="match_parent"
                        android:textCursorDrawable="@null"
                        android:cursorVisible="true"
                        android:layout_height="wrap_content"
                        android:hint="Name Of Family Head*"
                        android:inputType="text" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/LoginTextInputOuterFieldStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:boxStrokeColor="@color/black"
                    app:hintTextColor="@color/purple_500"
                    >

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/surnameFamilyHead2"
                        style="@style/LoginTextInputInnerFieldStyle"
                        android:layout_width="match_parent"
                        android:textCursorDrawable="@null"
                        android:cursorVisible="true"
                        android:layout_height="wrap_content"
                        android:hint="Surname"
                        android:inputType="text" />
                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginHorizontal="16dp"

            >

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/layout_dateOfBirth2"

                    app:boxStrokeColor="@color/black"
                    app:hintTextColor="@color/purple_500"

                    >

                    <AutoCompleteTextView
                        style="@style/LoginTextInputInnerFieldStyle"
                        android:id="@+id/dateOfBirth2"
                        android:layout_width="match_parent"
                        android:cursorVisible="true"
                        tools:ignore="DuplicateIds"

                        android:layout_marginEnd="4dp"
                        android:layout_height="wrap_content"
                        android:hint="Date Of Birth*"
                        android:inputType="none" />
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/layout_gender2"
                    app:boxStrokeColor="@color/black"
                    app:hintTextColor="@color/purple_500"
                    >
                    <AutoCompleteTextView
                        style="@style/LoginTextInputInnerFieldStyle"
                        android:id="@+id/gender2"
                        android:layout_width="match_parent"
                        android:textCursorDrawable="@null"
                        android:layout_marginStart="4dp"
                        android:cursorVisible="true"
                        android:drawableRight="@drawable/baseline_arrow_drop_down_24"
                        android:layout_height="wrap_content"
                        android:hint="Gender*"
                        android:inputType="none" />
                </com.google.android.material.textfield.TextInputLayout>



            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginHorizontal="16dp">

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="4dp"
                    android:id="@+id/layout_blood_group2"

                    app:boxStrokeColor="@color/black"
                    app:hintTextColor="@color/purple_500">

                    <AutoCompleteTextView
                       android:id="@+id/blood_group2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/LoginTextInputInnerFieldStyle"
                        android:hint="Blood Group*"
                        android:inputType="none"
                        tools:ignore="DuplicateIds" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/LoginTextInputOuterFieldStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="4dp"
                    app:boxStrokeColor="@color/black"
                    app:hintTextColor="@color/purple_500">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/parentName2"
                        style="@style/LoginTextInputInnerFieldStyle"
                        android:layout_width="match_parent"
                        android:textCursorDrawable="@null"
                        android:cursorVisible="true"
                        android:layout_height="wrap_content"
                        android:hint="Parent/Guardian Name*"
                        android:inputType="none" />
                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginHorizontal="16dp"

                >

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/layout_country2"

                    app:boxStrokeColor="@color/black"
                    app:hintTextColor="@color/purple_500"

                    >

                    <AutoCompleteTextView
                        android:id="@+id/country2"
                        android:layout_width="match_parent"
                        android:inputType="none"
                        android:layout_marginEnd="4dp"
                        style="@style/LoginTextInputInnerFieldStyle"
                        android:layout_height="wrap_content"
                        android:hint="Country*"

                        />
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/layout_state2"

                    app:boxStrokeColor="@color/black"
                    app:hintTextColor="@color/purple_500"
                    >

                    <AutoCompleteTextView
                        android:id="@+id/state2"
                        android:layout_width="match_parent"
                        android:textCursorDrawable="@null"
                        android:layout_marginStart="4dp"
                        style="@style/LoginTextInputInnerFieldStyle"
                        android:cursorVisible="true"
                        android:layout_height="wrap_content"
                        android:hint="State*"
                        android:inputType="none" />
                </com.google.android.material.textfield.TextInputLayout>



            </LinearLayout>
          <com.google.android.material.textfield.TextInputLayout

        style="@style/LoginTextInputOuterFieldStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
              app:boxStrokeColor="@color/black"
              app:hintTextColor="@color/purple_500"
        app:layout_constraintHorizontal_bias="0.5"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/address2"
            style="@style/LoginTextInputInnerFieldStyle"
            android:layout_width="match_parent"
            android:textCursorDrawable="@null"
            android:cursorVisible="true"
            android:layout_height="wrap_content"
            android:hint="Residence Address*"
            android:inputType="text" />
    </com.google.android.material.textfield.TextInputLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginHorizontal="16dp">

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="4dp"
                    app:boxStrokeColor="@color/black"
                    android:id="@+id/layout_city2"
                    app:hintTextColor="@color/purple_500">

                    <AutoCompleteTextView
                        android:id="@+id/city2"
                        android:layout_width="match_parent"
                        style="@style/LoginTextInputInnerFieldStyle"

                        android:layout_height="wrap_content"
                        android:hint="City*"
                        android:inputType="none"
                      />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/LoginTextInputOuterFieldStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="4dp"
                    app:boxStrokeColor="@color/black"
                    app:hintTextColor="@color/purple_500">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/village2"
                        style="@style/LoginTextInputInnerFieldStyle"
                        android:layout_width="match_parent"
                        android:textCursorDrawable="@null"
                        android:cursorVisible="true"
                        android:layout_height="wrap_content"
                        android:hint="Village*"
                        android:inputType="text" />
                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginHorizontal="16dp"
                >

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/LoginTextInputOuterFieldStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    app:boxStrokeColor="@color/black"
                    app:hintTextColor="@color/purple_500"
                    >

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/email2"
                        style="@style/LoginTextInputInnerFieldStyle"
                        android:layout_width="match_parent"
                        android:textCursorDrawable="@null"
                        android:cursorVisible="true"
                        android:layout_height="wrap_content"
                        android:hint="Email*"
                        android:inputType="textEmailAddress" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/LoginTextInputOuterFieldStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:boxStrokeColor="@color/black"
                    app:hintTextColor="@color/purple_500"
                    >

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/number2"
                        style="@style/LoginTextInputInnerFieldStyle"
                        android:layout_width="match_parent"
                        android:textCursorDrawable="@null"
                        android:cursorVisible="true"
                        android:layout_height="wrap_content"
                        android:hint="Number"
                        android:inputType="number" />
                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>











            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginHorizontal="16dp">

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/layout_rationCard2"
                    android:layout_marginEnd="4dp"
                    app:boxStrokeColor="@color/black"
                    app:hintTextColor="@color/purple_500">

                    <AutoCompleteTextView
                        android:id="@+id/rationCard2"
                        style="@style/LoginTextInputInnerFieldStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Ration Card*"
                        android:inputType="none"
                        tools:ignore="DuplicateIds" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/LoginTextInputOuterFieldStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="4dp"
                    app:boxStrokeColor="@color/black"
                    app:hintTextColor="@color/purple_500">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/rationCardNumber2"
                        style="@style/LoginTextInputInnerFieldStyle"
                        android:layout_width="match_parent"
                        android:textCursorDrawable="@null"
                        android:cursorVisible="true"
                        android:layout_height="wrap_content"
                        android:hint="Ration Card Number*"
                         />
                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginHorizontal="16dp"
                >

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/LoginTextInputOuterFieldStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    app:boxStrokeColor="@color/black"
                    app:hintTextColor="@color/purple_500"
                    >

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/adharNumber2"
                        style="@style/LoginTextInputInnerFieldStyle"
                        android:layout_width="match_parent"
                        android:textCursorDrawable="@null"
                        android:cursorVisible="true"
                        android:layout_height="wrap_content"
                        android:hint="Adhar Number*"
                        android:inputType="number" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/LoginTextInputOuterFieldStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:boxStrokeColor="@color/black"
                    app:hintTextColor="@color/purple_500"
                    >

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/voterId2"
                        style="@style/LoginTextInputInnerFieldStyle"
                        android:layout_width="match_parent"
                        android:textCursorDrawable="@null"
                        android:cursorVisible="true"
                        android:layout_height="wrap_content"

                        android:hint="VoterId Number*"
                        android:inputType="textCapCharacters" />
                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginHorizontal="16dp"
                >

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/LoginTextInputOuterFieldStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    app:boxStrokeColor="@color/black"
                    app:hintTextColor="@color/purple_500"
                    >

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/pincode2"
                        style="@style/LoginTextInputInnerFieldStyle"
                        android:layout_width="match_parent"
                        android:textCursorDrawable="@null"
                        android:cursorVisible="true"
                        android:layout_height="wrap_content"
                        android:hint="Pincode*"
                        android:inputType="number" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/LoginTextInputOuterFieldStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:boxStrokeColor="@color/black"
                    app:hintTextColor="@color/purple_500"
                    >

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/annualFamilyIncome2"
                        style="@style/LoginTextInputInnerFieldStyle"
                        android:layout_width="match_parent"
                        android:textCursorDrawable="@null"
                        android:cursorVisible="true"
                        android:layout_height="wrap_content"
                        android:hint="Family Income*"
                        android:inputType="number" />
                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginHorizontal="16dp">

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/layout_service_detail2"
                    android:layout_marginEnd="4dp"
                    app:boxStrokeColor="@color/black"
                    app:hintTextColor="@color/purple_500">

                    <AutoCompleteTextView
                        android:id="@+id/service_detail2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Service Detail*"
                        android:inputType="none"
                        tools:ignore="DuplicateIds" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/LoginTextInputOuterFieldStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="4dp"
                    app:boxStrokeColor="@color/black"
                    app:hintTextColor="@color/purple_500">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/designation2"
                        style="@style/LoginTextInputInnerFieldStyle"
                        android:layout_width="match_parent"
                        android:textCursorDrawable="@null"
                        android:cursorVisible="true"

                        android:layout_height="wrap_content"
                        android:hint="Designation*"
                        android:inputType="text" />
                </com.google.android.material.textfield.TextInputLayout>




            </LinearLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/submitButton"
                android:text="Submit"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/gredientbtn"
                android:textAllCaps="false"
                android:textColor="@color/white" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:layout_marginHorizontal="30dp"
                android:orientation="horizontal">





            </LinearLayout>
        </LinearLayout>



    </ScrollView>
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigationView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/nav_drawer_menu"
        />
</androidx.drawerlayout.widget.DrawerLayout>